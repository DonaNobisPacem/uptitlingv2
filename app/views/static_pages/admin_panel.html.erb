<div class="row">
	<div class="col-xs-12">
		<%= link_to '<i class="fa fa-user-plus"></i> Create new user'.html_safe, new_user_path, :class => "pull-right" %>
		<table class="table table-hover table-responsive">
			<thead>
				<tr>
					<th>Email</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Is Admin?</th>
					<th>Is Approved?</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.email %></td>
						<td><%= user.first_name %></td>
						<td><%= user.last_name %></td>
						<td><%= user.admin %></td>
						<td><%= user.approved %></td>
						<td> <%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Delete", user, data: { confirm: 'Delete this user?' }, :method => :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="text-center">
 	<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>