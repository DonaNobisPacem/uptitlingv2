<p id="notice"><%= notice %></p>
<%= render 'shared/university_selector' %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Code</th>
      <th>University Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.university_code %></td>
        <td><%= university.university_name %></td>
        <td class="pull-right"><%= link_to 'Show', university %> | <%= link_to 'Edit', edit_university_path(university) %> | <%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>