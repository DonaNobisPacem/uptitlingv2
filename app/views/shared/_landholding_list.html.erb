<%= link_to '<i class="fa fa-plus"></i> New Landholding'.html_safe, new_landholding_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Classification</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @landholdings.each do |landholding| %>
      <tr>
        <td style="text-align: left;"><%= landholding.classification %></td>
        <td style="text-align: left;"><%= landholding.description %></td>
        <td style="text-align: right;"><%= link_to "View details", landholding, :class => "btn btn-small btn-info" %></td>    
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @landholdings, renderer: BootstrapPagination::Rails %>
</div>